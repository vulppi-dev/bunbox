{
  "name": "@bunbox/engine",
  "version": "0.0.1-alpha.1",
  "description": "Engine module for Bunbox using SDL3 and Naga",
  "author": {
    "name": "Renato Rodrigues",
    "email": "renato@vulppi.dev"
  },
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/vulppi-dev/bunbox",
    "directory": "libs/sdl3"
  },
  "keywords": [
    "sdl",
    "sdl3",
    "ffi",
    "wgsl",
    "graphics",
    "audio",
    "input",
    "engine",
    "game",
    "bun"
  ],
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./plugin": {
      "import": "./src/plugin/index.ts",
      "types": "./src/plugin/index.ts"
    },
    "./hot": {
      "import": "./src/plugin/hot.ts",
      "types": "./src/plugin/hot.ts"
    }
  },
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "build": "bun build:bundle && bun build:types",
    "build:bundle": "bun build src/index.ts --outdir dist --format esm --target bun",
    "build:types": "tsc --project tsconfig.json",
    "pub": "npm publish --access=public --tag=latest",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@bunbox/sdl3": "^0.0.1-beta.1",
    "glob": "^11.0.3"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.2.0"
  }
}
