{
  "name": "@bunbox/engine",
  "version": "0.0.1-alpha.1",
  "description": "Engine module for Bunbox using SDL3 and Naga",
  "author": {
    "name": "Renato Rodrigues",
    "email": "renato@vulppi.dev"
  },
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/vulppi-dev/bunbox",
    "directory": "libs/sdl3"
  },
  "keywords": [
    "sdl",
    "sdl3",
    "ffi",
    "wgsl",
    "graphics",
    "audio",
    "input",
    "engine",
    "game",
    "bun"
  ],
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./plugin": {
      "import": "./src/plugin/index.ts",
      "types": "./src/plugin/index.ts"
    },
    "./hot": {
      "import": "./src/plugin/hot.ts",
      "types": "./src/plugin/hot.ts"
    }
  },
  "scripts": {
    "dev": "bun src/dev.ts",
    "pub": "npm publish --access=public --tag=latest",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@bunbox/sdl3": "^0.0.6",
    "@bunbox/tree": "^0.1.1",
    "@bunbox/utils": "^0.0.2",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@jsquash/avif": "^2.1.1",
    "@jsquash/jpeg": "^1.6.0",
    "@jsquash/png": "^3.1.1",
    "@jsquash/webp": "^1.5.0",
    "@types/chroma-js": "^3.1.1",
    "@vulppi/toolbelt": "^1.3.2",
    "audio-decode": "^2.2.3",
    "chroma-js": "^3.1.2",
    "fontkit": "^2.0.4",
    "glob": "^11.0.3",
    "ulid": "^3.0.1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.23",
    "@types/fontkit": "^2.0.8",
    "prettier": "^3.6.2",
    "prettier-plugin-multiline-arrays": "^4.0.3",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.2.0"
  }
}
