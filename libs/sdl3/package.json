{
  "name": "@bunbox/sdl3",
  "version": "0.0.1-reserved",
  "description": "Implement SDL (Simple DirectMedia Layer) bindings",
  "author": {
    "name": "Renato Rodrigues",
    "email": "renato@vulppi.dev"
  },
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "directory": "sdl"
  },
  "keywords": [
    "sdl",
    "sdl3",
    "ffi",
    "wasm",
    "graphics",
    "audio",
    "input",
    "typescript",
    "bun"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsc --watch --noEmit true --emitDeclarationOnly false",
    "build": "bun build:bundle && bun build:types",
    "build:bundle": "bun build --outdir dist --format esm --target bun src/index.ts",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist --outDir dist src/index.ts",
    "pub": "npm publish --access=public --tag=latest",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@bunbox/naga": "^0.0.4",
    "@bunbox/struct": "^1.0.2"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "@types/node": "^24.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.2.0"
  }
}
